{
  "name": "ads-transparency-scraper",
  "version": "BETA 2.0.0",
  "description": "Desktop app to capture screenshots from Facebook and Google Ads Transparency Centers",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "prebuild": "node scripts/ensure-chromium.js",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "publish-github": "electron-builder --publish=always",
    "fix-chromium": "node scripts/fix-chromium.js"
  },
  "keywords": ["electron", "puppeteer", "ads", "screenshot", "transparency"],
  "author": "Pedro Karim Nasiff Dumois (Hike the Cloud)",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "puppeteer": "^22.8.2",
    "archiver": "^7.0.1"
  },
  "build": {
    "appId": "com.hikethecloud.adstransparencyscraper",
    "productName": "Ads Transparency Scraper",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/*.ts",
      "!*.code-workspace",
      "!LICENSE.md",
      "!package-lock.json",
      "!yarn.lock",
      "!.git",
      "!dist",
      "!chromium-browser",
      "!scripts/test-*.js",
      "!scripts/generate-*.js",
      "!scripts/download-*.js",
      "!scripts/setup-chromium.js"  
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/app-icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": "AppImage"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Pepii2",
        "repo": "AdSpy",
        "private": false,
        "token": "${GH_TOKEN}"
      }
    ]
  }
}